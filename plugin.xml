<plugin>
    <!-- Имя плагина, возможно использование нескольких слов и дополнительных языков -->
    <name>
        <lang name="default">Opinions</lang>
        <lang name="russian">Мнения</lang>
    </name>

    <!-- Автор плагина. Здесь указываем свой ник или полное имя. Если ник, то достаточно дефолтного языка -->
    <author>
        <lang name="default">andreyv</lang>
    </author>

    <!-- Домашнаяя страница -->
    <homepage>http://gladcode.ru</homepage>

    <!-- Текущая версия плагина -->
    <version>1.2</version>

    <!-- Требуемое для работы плагина окружение -->
    <requires>
        <!-- Версия LS-->
        <livestreet>1.x</livestreet>
        <!-- Перечень зависимых плагинов -->
        <plugins></plugins>
    </requires>

    <!-- Полнотекстовое описание плагина, на необходимых языках -->
    <description>
        <lang name="default">Extended functional for user voting</lang>
        <lang name="russian">Расширенный функционал голосования пользователей</lang>
    </description>
</plugin>